<Window
    x:Class="ImageProcessor.Examples.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:ImageProcessor.Examples"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    Topmost="True"
    mc:Ignorable="d">
    <DockPanel>

        <UniformGrid Columns="3" DockPanel.Dock="Top">
            <Slider
                x:Name="S1"
                Margin="5,0"
                Maximum="1"
                Minimum="0"
                Value="1" />
            <Slider
                x:Name="S2"
                Margin="5,0"
                Maximum="40"
                Minimum="0.01"
                Value="0.5" />

            <Slider
                x:Name="S3"
                Margin="5,0"
                IsSnapToTickEnabled="True"
                Maximum="19"
                Minimum="1"
                Value="0" />

        </UniformGrid>

        <UniformGrid Columns="2">
            <hc:ImageViewer x:Name="Viewer1" Margin="5" />
            <hc:ImageViewer x:Name="Viewer2" Margin="5" />
        </UniformGrid>


    </DockPanel>
</Window>
